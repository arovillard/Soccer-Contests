    <!-- META TAGS -->
    <meta charset="utf-8">
    <meta name="viewport" content="user-scalable=0,width=device-width,height=device-height,initial-scale=1,maximum-scale=1" />
    <meta name="description" content="">
    <meta name="keywords" content="">
    <!-- CSS FILES -->
    <%= stylesheet_link_tag    "normalize" %>
    <%= stylesheet_link_tag    "animate" %>
    <%= stylesheet_link_tag    "flexslider" %>
    <%= stylesheet_link_tag    "style" %>
    <%= stylesheet_link_tag    "colors" %>
    <%= stylesheet_link_tag    "colorbox" %>
    <%= stylesheet_link_tag    "jquery.bxslider" %>
    <%= stylesheet_link_tag    "media" %>
    <%= javascript_include_tag "modernizr" %>
    <link rel="shortcut icon" type="image/x-icon" href="images/favicon.ico" />
    <!--[if lt IE 9]>
      <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>

  <body>
    <% if notice %>
      <div data-alert="" class="alert-box success">
        <div class="row">
          <%= notice %>
        </div>
      </div>
    <% end %>

    <%= yield %>

        <!-- JS FILES -->
    <%= javascript_include_tag "jquery" %>
    <%= javascript_include_tag "backstretch" %>
    <%= javascript_include_tag "jquery.flexslider" %>
    <%= javascript_include_tag "jflickrfeed.min" %>
    <%= javascript_include_tag "jquery.bxslider.min" %>
    <%= javascript_include_tag "jquery.colorbox-min" %>

    <!-- BG IMAGE -->
    <script type="text/javascript">
      jQuery(window).load(function() {
        "use strict";
        jQuery('body').backstretch( "#{asset_path('bg-blurred.jpg')}");
      });
    </script>
    <!-- SPONSORS SLIDER -->
    <script type="text/javascript">
      jQuery(document).ready(function() {
        jQuery('#logos').bxSlider({
          slideWidth: 235,
          pager: false,
          minSlides: 2,
          maxSlides: 5,
          infiniteLoop: false,
          hideControlOnEnd: true,
          slideMargin: 10
        });
      });
    </script>
    <!-- FIXTURE SLIDER -->
    <script type="text/javascript">
      jQuery(document).ready(function() {
        "use strict";
        jQuery('#fixture').bxSlider({
          pager: false,
          infiniteLoop: false,
          hideControlOnEnd: true
        });
      });
    </script>
    <%= javascript_include_tag "custom" %>
  </body>

</html>
