<h1>Listing games</h1>

<table>
  <thead>
    <tr>
      <th>Contest</th>
      <th>Team a name</th>
      <th>Team b name</th>
      <th>Team a result</th>
      <th>Team b result</th>
      <th>Game date</th>
      <th>Group</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.contest_id %></td>
        <td><%= game.team_a_name %></td>
        <td><%= game.team_b_name %></td>
        <td><%= game.team_a_result %></td>
        <td><%= game.team_b_result %></td>
        <td><%= game.game_date %></td>
        <td><%= game.group %></td>
        <td><%= link_to 'Show', contest_game_path(@contest, game) %></td>
        <td><%= link_to 'Edit', edit_contest_game_path(@contest, game) %></td>
        <td><%= link_to 'Destroy', contest_game_path(@contest, game), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

