<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @contest.name %>
</p>
<div class="row">
  <div class="small-6 large-centered columns"><%= render 'form_entry' %></div>
</div>
<%= link_to 'Back', contests_path %>

<h1>Listing entries</h1>

<table>
  <thead>
    <tr>
      <th>Team a name</th>
      <th>score</th>
      <th>score</th>
      <th>Team b name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @contest.entries.where(:user_id => current_user).each do |entry| %>
      <tr>
        <td><%= entry.team_a_name %></td>
        <td><%= entry.team_a_score %></td>
        <td><%= entry.team_b_score %></td>
        <td><%= entry.team_b_name %></td>
        <td><%= link_to 'Edit', edit_contest_entry_path(@contest, entry) %></td>
        <td><%= link_to 'Destroy', [@contest, entry], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

