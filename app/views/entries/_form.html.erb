  <%= form_for [@contest, @entry] do |f| %>
    <% if @entry.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

        <ul>
        <% @entry.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="games">
      <div class="field">
        <%= f.label :team_a_name %><br>
        <%= f.text_field :team_a_name %>
      </div>

      <div class="field">
        <%= f.label :team_a_score %><br>
        <%= f.number_field :team_a_score %>
      </div>
      <div class="dash">
        <p>-</p>
      </div>

      <div class="field">
        <%= f.label :team_b_score %><br>
        <%= f.number_field :team_b_score %>
      </div>

      <div class="field">
        <%= f.label :team_b_name %><br>
        <%= f.text_field :team_b_name %>
      </div>


      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
    <div class="clear-both"></div>
  <% end %>
