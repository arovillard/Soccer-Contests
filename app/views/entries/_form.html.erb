  <%= form_for [@contest, @entry] do |f| %>
    <% if @entry.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

        <ul>
        <% @entry.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="games row">
      <div class="small-4 columns team-left">
        <p><%= @entry.team_a_name %></p>
      </div>
      <div class="small-4 columns centered">
        <div class="row">
          <div class="small-5 columns field-left">
            <%= f.number_field :team_a_score, :class => 'number-field' %>
          </div>
          <div class="small-2 columns dash">
            <p>-</p>
          </div>
          <div class="small-5 columns">
            <%= f.number_field :team_b_score, :class => 'number-field' %>
          </div>
        </div>
      </div>
      <div class="small-4 columns team-right">
        <p><%= @entry.team_b_name %></p>
      </div>
    </div>
    <div class="clear-both"></div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
